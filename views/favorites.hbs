<h1>{{movie.title}}</h1>
<hr>
<p>Year: {{movie.year}}</p>
<img src="{{movie.poster }}" alt="{{movie.title}}" />
<form action="/movie-details/{{movie.imdbid}}/rating" method="POST">
  <label>Rating</label>
  <input type="number" name="rating" min="1" max="5" />
  <button type="submit">Submit</button>
</form>